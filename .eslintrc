{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": ["airbnb", "plugin:prettier/recommended"],
  "rules": {
    "react/jsx-filename-extension": 0,
    "no-use-before-define": ["error", {
      "functions": false,
      "classes": true
    }],
    "no-param-reassign": ["error", { "props": false }],
    "prettier/prettier": ["error", { "singleQuote": true }]
  }
}
